.container {
  display: flex;
  flex-direction: column;
}

.section{
  height: 900rpx;
}

.section__title {
  margin: 30rpx 0 20rpx 20rpx;
  font-size: 56rpx;
}

.section label {
  display: block;
  font-size: 38rpx;
  margin: 36rpx 40rpx 0;
}

.btn-area {
  display: flex;
  flex-direction: column;
  height: 200rpx;
  width: 100%;
}

.btn-area button {
  font-size: 32rpx;
  height: 80rpx;
  width: 100%;
  margin-top: 15rpx;
  background-color: #19b4ec;
}
