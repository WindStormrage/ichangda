.body{
margin-top: 0rpx;

}
.listitem{
    width: 100%;
    background-color: #FFF;
    margin-top: 1px;
    display: flex;
}
.itemicon{
    width: 50rpx;
    height: 50rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
}
.itemtext{
    margin-top: 26rpx;
    width: 75%;
    font-size: 30rpx;
    color: #515151;
}
.itemarrow{
    width: 48rpx;
    height: 48rpx;
    margin-top: 20rpx;
    margin-right: 20rpx;
}

.AccountName{
    margin-top: 10rpx;
    font-size: 30rpx;
}
.header {
  width: 100%;
  height: 455rpx;
  box-sizing: border-box;
  background-size: 100% 100%;
}

.header-img {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.header-txt {
  width: 100%;
  margin-top: 10rpx;
  text-align: center;
  font-family: '黑体';
  font-size: 38rpx;
  color: #fff;
}

.non-height {
  background: green;
}

.flex {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.header image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
}


.right-arrow{
    width: 48rpx;
    height: 48rpx;
    margin-top: 70rpx;
    margin-right: 30rpx;
    float: right;
}
