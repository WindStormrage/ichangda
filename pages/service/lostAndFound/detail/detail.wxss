image {
  width: 100%;
  height: 100%;
}

.content {
  padding-bottom: 100rpx;
}

.content .name {
  font-size: 40rpx;
  text-align: left;
  padding: 20rpx 0 0rpx 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-family: '黑体';
  color: #fff;
}

.content .date {
  padding: 0rpx 0rpx 0rpx 10rpx;
  font-size: 25rpx;
  color: #fff;
}

.content .head {
  width: 750rpx;
  background-color: #1296db;
  display: flex;
  flex-direction: row;
}

.flex_1 {
  flex: 1;
}

.content image {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx 20rpx;
  border-radius: 50%;
}

.content .addr {
  width: 750rpx;
  background-color: #fff;
  color: #1296db;
  font-size: 30rpx;
  padding: 10rpx 0rpx 10rpx 10rpx;
}

.body {
  display: flex;
  flex-direction: row;
}

.body_info {
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 30rpx;
}

.body image {
  margin: 0;
  padding: 0;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}


.description {
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 30rpx;
  width: calc(100%-20rpx);
  background-color: #fff;
  padding: 10rpx;
  font-size: 30rpx;
  color: #747474;
  box-shadow: 0 0 10rpx #666;
}

.notic {
  width: 750rpx;
  text-align: center;
  margin-top: 10rpx;
  font-size: 25rpx;
  color: #747474;
}

.call {
  padding: 0;
  width: 750rpx;
  height: 80rpx;
  color: #fff;
  background-color: #1296db;
  display: flex;
  position: fixed;
  bottom: 0;
}

.call_txt {
  margin-top: 20rpx;
}

.call image {
  margin-left: 30rpx;
  width: 50rpx;
  height: 50rpx;
}
