@import "../stuNoInput-template/stuNoInput-template.wxss";

.input-text {
  padding-top: 30rpx;
  padding-bottom: 20rpx;
  height: 56rpx;
  font-size: 40rpx;
  line-height: 56rpx;
  font-family: '黑体';
  margin-left: 15rpx;
}

.line {
  width: 90%;
  margin-left: 5%;
  height: 2rpx;
  background: #eee;
  margin-bottom: 15rpx;
}

.container {
  height: 436rpx;
}

.scroll-contarner {
  white-space: nowrap;
  height: 745rpx;
}

.btn-area {
  display: flex;
  flex-direction: column;
  height: 200rpx;
  width: 100%;
}

.btn-area button {
  font-size: 32rpx;
  height: 80rpx;
  width: 100%;
  margin-top: 15rpx;
  background-color: #19b4ec;
}

.addOneImg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 15px;
}

.addOne {
  margin-top: 15rpx;
  text-align: center;
}

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.3;
  overflow: hidden;
}

/*content*/

.drawer_box {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 20%;
  left: 50rpx;
  z-index: 1001;
  background: #fafafa;
  border-radius: 3px;
}

.drawer_title {
  padding: 15px;
  font: 20px "microsoft yahei";
  text-align: center;
}

.drawer_content {
  padding-bottom: 30rpx;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}

.btn_ok {
  padding: 10px;
  font: 20px "microsoft yahei";
  text-align: center;
  border-top: 1px solid #e8e8ea;
  color: #3cc51f;
}

.input_base {
  border: 2rpx solid #ccc;
  margin: 50rpx 50rpx 10rpx 50rpx;
  line-height: 40px;
}

.txt_ps {
  margin-left: 50rpx;
  font-size: 15px;
  color: #ccc;
}
