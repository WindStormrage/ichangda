.page {
  margin: 0rpx;
  padding: 0rpx;
  font-family: "苹方";
}

.header {
  width: 100%;
  height: 90rpx;
  margin: 14rpx auto 50rpx;
  text-align: center;
  letter-spacing: 4rpx;
  font-size: 40rpx;
  color: #515151;
}

.none {
  display: none;
}

.block {
  display: block;
}

.number {
  width: 656rpx;
  height: 84rpx;
  text-align: center;
  margin: 0rpx auto;
  position: relative;
  top: -70rpx;
}

.scroll-view {
  white-space: nowrap;
}

.scroll-view view {
  width: 82rpx;
  height: 82rpx;
  line-height: 82rpx;
  text-align: center;
  color: #fff;
  background-color: #81d6f5;
  margin: 0rpx 16rpx;
  border-radius: 50%;
  display: inline-block;
}

.scroll-view view:first-child {
  margin-left: 0rpx;
  background-color: #3ec0ef;
}

.scroll-view view:last-child {
  margin-right: 0rpx;
}

.content {
  display: flex;
  flex-direction: column;
  margin-bottom: 52rpx;
}

.music-container {
  font-size: 26rpx;
}

.music {
  position: relative;
  width: 100%;
  height: 140rpx;
}

.music-img {
  width: 126rpx;
  height: 126rpx;
  margin-left: 30rpx;
  border-radius: 50%;
}

.music-name {
  width: 300rpx;
  position: absolute;
  left: 200rpx;
  top: 15rpx;
}

.music-song {
  font-size: 30rpx;
  width: 400rpx;
  position: absolute;
  font-weight: bold;
  text-align: center;
  left: 190rpx;
  top: 54rpx;
}

.music-singer {
  width: 220rpx;
  text-align: right;
  position: absolute;
  right: 120rpx;
  top: 95rpx;
}

.music-name, .music-song, .music-singer {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.star {
  width: 44rpx;
  height: 42rpx;
  position: absolute;
  left: 600rpx;
  top: 55rpx;
}

.x {
  width: 44rpx;
  height: 42rpx;
  position: absolute;
  left: 690rpx;
  top: 5rpx;
}

.content-container {
  display: flex;
  flex-direction: column;
}

.lyrics-container, .say-container, .reson-container {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-top: 10rpx;
}

.lyrics, .say, .reson {
  font-weight: bold;
  text-align: center;
  width: 20%;
  margin-left: 34rpx;
}

.lyrics-detail, .say-detail, .reson-detail {
  float: left;
  margin-left: 15rpx;
  width: 75%;
  margin-right: 15rpx;
  color: #797d86;
}
